<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.shoppingmall.user.dao.UserDAO">
	<select id="existLoginId" parameterType="string" resultType="string">
		SELECT
			`loginId`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	<select id="existPhoneNumber" parameterType="string" resultType="string">
		SELECT
			`phoneNumber`
		FROM
			`user`
		WHERE
			`phoneNumber` = #{phoneNumber}
	</select>
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			,`password`
			,`name`
			,`address`
			,`phoneNumber`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{address}
			,#{phoneNumber}
			,NOW()
			,NOW()
		)
	</insert>
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.shoppingmall.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`address`
			,`phoneNumber`
			,`type`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND
			`password` = #{password}
	</select>
	<select id="selectIdByLoginId" parameterType="string" resultType="int">
		SELECT
			`id`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	<select id="selectUserByUserId" parameterType="int" resultType="com.shoppingmall.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`address`
			,`phoneNumber`
			,`type`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
</mapper>