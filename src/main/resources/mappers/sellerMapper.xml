<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.shoppingmall.seller.dao.SellerDAO">
 	<select id="selectSellerByUserId" parameterType="int" resultType="com.shoppingmall.seller.model.Seller">
 		SELECT
 			`id`
			,`userId`
			,`shopName`
			,`address`
			,`shopPhoneNumber`
			,`file`
			,`bannerImg`
			,`shopMainImg`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`seller`
 		WHERE
 			`userId` = #{userId}
 	</select>
 </mapper>